<h1>Upload a New File</h1>

<%= form_with(model: @user_file, url: user_files_path) do |f| %>
  <% if @user_file.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user_file.errors.count, "error") %> prohibited this file from being saved:</h2>
      <ul>
        <% @user_file.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :file, "Select a file" %><br>
    <%= f.file_field :file %>
  </div>

  <div class="actions">
    <%= f.submit "Upload File" %>
  </div>
<% end %>

